# TimeScaleDB Configuration
timescaledb: 
  host: 0.0.0.0
  port: 5432
  database: database

# Partition in cluster
partition: partition_name

# iDRAC Configuration for the 15G model
idrac:
  model: 15G
  nodelist:
    - 10.101.23.[1-60]
    - 10.101.24.[1-60]
    - 10.101.25.[1-60]
    - 10.101.26.[1-60]

